<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chohuatl.Vistas.Principal"
             Title="Principal">
    <Grid BackgroundColor="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <BoxView Grid.Row="0" BackgroundColor="BlueViolet"/>
        <Label Text="Chohuatl"
                     Grid.Row="0" HorizontalOptions="Center" FontSize="Large"/>
        <Label Text="Chohuatl es una herramienta la cual contempla la lengua Nahuatl y el Chocholteco"
                   HorizontalOptions="CenterAndExpand" Grid.Row="1"/>
    </Grid>
</ContentPage>